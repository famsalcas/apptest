<?xml version="1.0" encoding="UTF-8"?>

<component name="MainScene" extends="Scene" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://rokudev.roku.com/rokudev/schema/RokuSceneGraph.xsd">
<script type="text/brightscript" uri="pkg:/components/MainScene/MainScene.brs"/>
<children>
    <!-- RowList para mostrar canales organizados por categorías -->
    <RowList
        id="rowList"
        translation="[50, 100]"
        itemComponentName="pkg:/components/ChannelItem/ChannelItem.xml"
        rowItemSize="[300, 200]"
        itemSize="[300, 200]"
        numRows="4"
        rowHeights="[200]"
        rowItemSpacing="[20, 0]"
        rowSpacing="30"
        showRowLabel="[true]"
        rowLabelOffset="[0, 20]"
        visible="false"
        />
    
    <!-- Video player -->
    <Video
        id="Video"
        translation="[960, 100]"
        width="960"
        height="540"
        />
    
    <!-- Información del canal actual -->
    <Rectangle
        id="channelInfoBg"
        translation="[50, 650]"
        width="400"
        height="100"
        color="0x000000CC"
        visible="true"
        >
        <Label
            id="channelInfo"
            translation="[20, 20]"
            width="360"
            height="60"
            font="font:MediumBoldSystemFont"
            color="0xFFFFFFFF"
            text="Selecciona un canal"
            />
    </Rectangle>
    
    <!-- Indicador de carga -->
    <Rectangle
        id="loadingBg"
        translation="[860, 400]"
        width="200"
        height="80"
        color="0x000000CC"
        visible="false"
        >
        <Label
            id="loadingSpinner"
            translation="[50, 25]"
            width="100"
            height="30"
            font="font:MediumSystemFont"
            color="0xFFFFFFFF"
            text="Cargando..."
            visible="false"
            />
    </Rectangle>
    
    <!-- Componentes de background -->
    <get_channel_list
        id="get_channel_list"
        control="STOP"
        />
        
    <save_feed_url
        id="save_feed_url"
        control="STOP"
        />
        
</children>
</component>