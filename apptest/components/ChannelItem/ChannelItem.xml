<?xml version="1.0" encoding="utf-8"?>

<component name="ChannelItem" extends="Group">
    <interface>
        <field id="itemContent" type="node" onChange="setContent"/>
        <field id="focusPercent" type="float" onChange="focusChanged"/>
    </interface>
    
    <script type="text/brightscript" uri="pkg:/components/ChannelItem/ChannelItem.brs"/>
    
    <children>
        <!-- Fondo del item -->
        <Rectangle
            id="itemBg"
            width="280"
            height="180"
            color="0x2E2E2EFF"
            >
            
            <!-- Logo del canal -->
            <Poster
                id="channelLogo"
                translation="[10, 10]"
                width="120"
                height="80"
                scaleRotateCenter="[60, 40]"
                loadDisplayMode="scaleToFit"
                failedBitmapUri="pkg:/images/channel-default.png"
                />
            
            <!-- Información del canal -->
            <Label
                id="channelTitle"
                translation="[140, 20]"
                width="130"
                height="60"
                font="font:SmallBoldSystemFont"
                color="0xFFFFFFFF"
                wrap="true"
                maxLines="3"
                />
            
            <!-- Categoría -->
            <Label
                id="channelCategory"
                translation="[10, 100]"
                width="260"
                height="25"
                font="font:SmallSystemFont"
                color="0xCCCCCCFF"
                />
            
            <!-- Indicador de calidad -->
            <Rectangle
                id="qualityBadge"
                translation="[200, 10]"
                width="40"
                height="20"
                color="0x00AA00FF"
                visible="false"
                >
                <Label
                    id="qualityText"
                    translation="[5, 2]"
                    width="30"
                    height="16"
                    font="font:SmallSystemFont"
                    color="0xFFFFFFFF"
                    text="HD"
                    />
            </Rectangle>
            
        </Rectangle>
        
        <!-- Borde de foco -->
        <Rectangle
            id="focusBorder"
            width="280"
            height="180"
            color="0x00000000"
            />
            
    </children>
</component>